<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/tagscard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44sp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:contentPadding="16dp"
        android:clipToPadding="false">

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/c_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:atg_horizontalPadding="12dp"
            app:atg_verticalPadding="6dp"
            app:atg_textSize="16sp"
            app:atg_isAppendMode="false"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="bottom"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:text="@string/trip_feed_heading_feed"/>

</FrameLayout>